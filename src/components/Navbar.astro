---
const items = [
  {
    title: "Home",
    path: "/",
  },
  {
    title: "Lugares",
    path: "/places",
  },
  {
    title: "Tienda",
    path: "/tienda",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Veterinarias",
    path: "/vets",
  },
  {
    title: "Contacto",
    path: "/contact",
  },
];

---


<div class=" bg-zinc-900 text-white ">
  <div class=" header p-3 m-2 font-semibold ">LOGO</div>
  
      <nav>
        <input type="checkbox" id="check"/>
        <label for="check" class="bar-btn">
          <div class="hamburger">
            <span class="line"></span>
            <span class="line"></span>
            <span class="line"></span>
          </div>
          <style> 
          /* nav styles */
          .hamburger {
            padding-right: 20px;
            cursor: pointer;
          }
          
          .hamburger .line {
            display: block;
            width: 40px;
            height: 5px;
            margin-bottom: 10px;
            background-color: rgb(0, 54, 96);
          }
          @media screen and (min-width: 636px) {
            .nav-links {
              margin-left: 5em;
              display: block;
              position: static;
              width: auto;
              background: none;
            }
          
            .nav-links a {
              display: inline-block;
              padding: 15px 20px;
            }
          
            .hamburger {
              display: none;
            }
          }
          </style>
        </label>
        
        <ul class="nav-menu">
          {items.map((item, index) => (
            <li class={index === 0 ? 'active bg-rose-400' : ''}>
              <a class="font-semibold uppercase text-base p-2 rounded-sm" href={item.path}>
                {item.title}
              </a>
            </li>
          ))}
        </ul>
      </nav>
  </div>
  
    <style>
     
      *{
        padding:0;
        margin:0;
        text-decoration:none;
        box-sizing:border-box;
      }
      .header{
        width: 100%;
        height: auto;
      }
      nav {
        height: 100px;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .bar-btn{
        font-size: 25px;
        color:#ffff;
        cursor: pointer;
        position: relative;
        z-index: 2;
      }
      .nav-menu{
        position:fixed;
        width: 100%;
        height: 0;
        top:100px;
        background: rgba(0, 0, 0, 0.95);
        text-align: center;
        transition: all 0.5s;
        z-index: 1;
      }
      
      .nav-menu li{
        display:none;
        line-height: 30px;
        margin:10px 0;
        transition: all 0.5s;
      }
    
      .nav-menu li a{
        color:#ffff;
        font-size:20px;
        text-transform: uppercase;      

      }
      #check {display:none;
      }
      #check:checked ~ .nav-menu {
        height:100vh;
      }
      #check:checked ~ .nav-menu li {
        display:block;
      }

    @media screen and (min-width:768px) {
          nav{
            height: 20px;
          }
          .bar-btn{
            display: none;
          }
          .nav-menu li:first-child a {
    color: rgb(251 113 133);
    background-color: #ffff;
      }
      .nav-menu li:first-child a:hover {
    color:#ffff;
    background-color: rgb(251 113 133);
      }

          .nav-menu {
            position: relative;
            height: 100px;
            top: 0;
            background:none;
            transition: none;
            text-align:right;
            margin-right: 1em;
          }
          
          #check {display:none;
          }
          .nav-menu li {
            display: inline;
            line-height: 5px;
            margin: 0.5em;
            transition: none;
          }
          .nav-menu li a{
              font-size: 20px;
              
              
           }
          .nav-menu li a:hover{
              background-color: rgb(251 113 133);
              
          }
            
            }
    </style>


